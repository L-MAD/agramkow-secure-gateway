{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",

        "runtime": {
          "type": "docker",

          "settings": {
            "registryCredentials": {
              "myacr": {
                "address": "acrladsecure.azurecr.io",

                "password": "REDACTED_FOR_SECURITY",

                "username": "acrladsecure"
              }
            }
          }
        },

        "systemModules": {
          "edgeAgent": {
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.5"
            },

            "type": "docker"
          },

          "edgeHub": {
            "restartPolicy": "always",

            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.5",

              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"5671/tcp\":[{\"HostPort\":\"5671\",\"HostIp\":\"127.0.0.1\"}],\"8883/tcp\":[{\"HostPort\":\"8883\",\"HostIp\":\"127.0.0.1\"}],\"443/tcp\":[{\"HostPort\":\"443\",\"HostIp\":\"127.0.0.1\"}]}}}"
            },

            "status": "running",

            "type": "docker"
          }
        },

        "modules": {
          "SimulatedTemperatureSensor": {
            "restartPolicy": "always",

            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-simulated-temperature-sensor:1.0"
            },

            "status": "running",

            "type": "docker"
          },

          "SecureSensor": {
            "restartPolicy": "always",

            "settings": {
              "image": "acrladsecure.azurecr.io/secure-sensor:v2"
            },

            "status": "running",

            "type": "docker"
          }
        }
      }
    },

    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",

        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        },

        "routes": {
          "SensorToCloud": {
            "route": "FROM /messages/modules/SimulatedTemperatureSensor/outputs/temperatureOutput INTO $upstream"
          }
        }
      }
    },

    "SimulatedTemperatureSensor": {
      "properties.desired": {}
    },

    "SecureSensor": {
      "properties.desired": {}
    }
  }
}
